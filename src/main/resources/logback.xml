<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- for enabling debug-->
   <!-- <configuration debug="true">-->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern> %d{HH:mm:ss.SSS} - %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>